<% if product.price > 0 and product.master.price_points.present? %>
  <div id="bulk-discount">
    <h6><%= Spree.t(:bulk_discount) %></h6>
    <table class="table">
    	<% product.master.price_points.each do |v| %>
      	<%= content_tag(:tr) do %>
        	<%= content_tag :td, Spree::Money.new(v.offset).to_s %>
        	<%= content_tag(:td, '%i%' % (product.master.price - v.offset) %>
      	<% end %>
    	<% end %>
    </table>
  </div>
<% end %>
